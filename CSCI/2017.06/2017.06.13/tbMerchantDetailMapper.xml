<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="orm.zz.tbMerchantDetailMapper">
    <select id="selectSeries"  parameterType="java.util.HashMap" resultType="java.util.HashMap">
    ${pageBegin}
        select MERCHANT_ID,MERCHANT_NAME,CREAT_TIME,CREATOR,CHECK_TLRNO,CHECK_TIME from  TB_MERCHANTID
        where 1=1
        <if test="MERCHANT_ID != null &amp;&amp; !&quot;&quot;.equals(MERCHANT_ID)">
            and MERCHANT_ID=#{MERCHANT_ID,jdbcType=VARCHAR} 
        </if>
        <if test="MERCHANT_NAME != null &amp;&amp; !&quot;&quot;.equals(MERCHANT_NAME)">
            and MERCHANT_NAME=#{MERCHANT_NAME,jdbcType=VARCHAR} 
        </if>
    ${pageEnd} 
    </select>

    <select id="selectSeries_totalCount" parameterType="java.util.HashMap" resultType="java.lang.Integer">
        SELECT count(*)
        FROM TB_MERCHANTID
        where 1=1
        <if test="MERCHANT_ID != null &amp;&amp; !&quot;&quot;.equals(MERCHANT_ID)">
            and MERCHANT_ID=#{MERCHANT_ID,jdbcType=VARCHAR} 
        </if>
        <if test="MERCHANT_NAME != null &amp;&amp; !&quot;&quot;.equals(MERCHANT_NAME)">
            and MERCHANT_NAME=#{MERCHANT_NAME,jdbcType=VARCHAR} 
        </if>
    </select>

    <select id="queryMerchantByMerchant_ID" parameterType="java.util.HashMap"
        resultType="java.util.HashMap">
        ${pageBegin}
        select MERCHANT_ID,MERCHANT_NAME,CREAT_TIME,CREATOR,CHECK_TLRNO,CHECK_TIME 
        from  TB_MERCHANTID
        WHERE
        MERCHANT_ID = #{MERCHANT_ID}
        ${pageEnd}
    </select>
    
    <select id="selectMerchantCount" parameterType="java.util.HashMap" resultType="java.lang.Integer">
        SELECT count(*)
        FROM TB_MERCHANTID
        WHERE MERCHANT_ID = #{MERCHANT_ID} 
    </select>

    <insert id="addMerchant" parameterType="java.util.HashMap" >
        INSERT INTO TB_MERCHANTID 
            (MERCHANT_ID,MERCHANT_NAME,CREATOR,CREAT_TIME,CHECK_TLRNO,CHECK_TIME) 
        VALUES 
            (#{MERCHANT_ID,jdbcType=VARCHAR}, #{MERCHANT_NAME,jdbcType=VARCHAR},#{CREATOR,jdbcType=VARCHAR},
             #{CREAT_TIME,jdbcType=VARCHAR},#{CHECK_TLRNO,jdbcType=VARCHAR},#{CHECK_TIME,jdbcType=VARCHAR})
    </insert>

    <delete id="delMerchant" parameterType="java.util.HashMap" >
        DELETE 
        FROM TB_MERCHANTID  
        WHERE MERCHANT_ID = #{MERCHANT_ID}
    </delete>

    <update id="updateMerchantCheck" parameterType="java.util.HashMap" >
        UPDATE TB_MERCHANTID 
        SET CHECK_TLRNO = #{CHECK_TLRNO},CHECK_TIME=#{CHECK_TIME}
        WHERE MERCHANT_ID = #{MERCHANT_ID}
    </update>
</mapper>